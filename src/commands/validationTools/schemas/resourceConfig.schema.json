{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RHC Resource Config",
  "type": "object",
  "required": ["ResourceType", "PolicyFile", "OwnershipId", "HealthSystemResourceType"],
  "properties": {
    "ResourceType": { "type": "string" },
    "PolicyFile": { "type": "string" },
    "OwnershipId": { "type": "string" },
    "HealthSystemResourceType": { "type": "string" },
    "MdmAccounts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["MonitoringAccount", "Region"],
        "properties": {
          "MonitoringAccount": { "type": "string" },
          "Region": { "type": "string" },
          "StampUrl": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
